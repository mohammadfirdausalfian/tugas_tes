<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdentitasActivity"
    android:orientation="vertical"
    android:background="#DC3D4E6D">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            android:background="#5C460404"
            android:id="@+id/backfromid"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Masjid"
                android:textAlignment="center"
                android:textSize="35dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:id="@+id/almt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Masjid"
                android:textSize="25dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#5C376783">
        <EditText
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/nama"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Edit Nama Masjid" />

        <EditText
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/alamat"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Edit Alamat Masjid" />

        <Button
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#5CDFD2D2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Edit Jadwal"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_create_black_24dp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#BC101A47">

    <Button
        android:background="#fff"
        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_marginLeft="20dp"
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Shubuh"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="Dhuhur"
                    android:textSize="15dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashar"
                    android:textSize="15dp"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maghrib"
                    android:textSize="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isya"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhuha"
                    android:textSize="15dp" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:background="#5CDFD2D2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:gravity="center"
            android:textSize="14dp"
            android:id="@+id/subuh"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:hint="Edit Jam Sholat Shubuh"/>
        <EditText
            android:gravity="center"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:id="@+id/duhur"
            android:layout_width="200dp"
            android:hint="Edit Jam Sholat Dhuhur"/>
        <EditText
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="200dp"
            android:hint="Edit Jam Sholat Ashar"
            android:layout_height="wrap_content"
            android:id="@+id/asar"/>
        <EditText
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="200dp"
            android:hint="Edit Jam Sholat Maghrib"
            android:layout_height="wrap_content"
            android:id="@+id/magrib"/>
        <EditText
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="200dp"
            android:hint="Edit Jam Sholat Isya"
            android:layout_height="wrap_content"
            android:id="@+id/isa"/>
        <EditText
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="200dp"
            android:hint="Edit Jam Sholat Dhuha"
            android:layout_height="wrap_content"
            android:id="@+id/duha"/>
        <Button
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="#5C082B1A"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Edit Jadwal"
            android:id="@+id/editjadwal"
            android:drawableLeft="@drawable/ic_create_black_24dp" />
    </LinearLayout>
</LinearLayout>